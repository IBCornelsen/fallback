---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
		<title>
			{title}
		</title>
	</head>

	<body>
		<main>
			<article>
				<slot />
			</article>
		</main>
	</body>
</html>
